# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /api                        controllers.ApiDocController.api


#Functions for Bans API
GET     /blockedservers                     controllers.BansApiController.getBlockedServerHashes()

#Functions for Login API
GET     /session/minecraft/profile/:strippedUuid                     controllers.LoginApiController.getPlayerProfile(strippedUuid: String)

# Map static resources from the /public folder to the /assets URL path
GET /assets/*file           controllers.Assets.at(file)
GET /versionedAssets/*file  controllers.Assets.versioned(file)